<div class="container">

    <div class=" m-4 rounded test">
        <h1 class="display-4  text-center">Eat Da Burger!</h1>
        <hr class="my-4">
        <form class="create-form text-center">
            <div class="m-2">What would you late to eat?</div>
            <div class="form-group">
                <label for="ca">New Burger:</label>
                <input type="text" id="ca" name="burger">
                <button type="submit" class="btn btn-success" id="addburger"><span class="fa fa-thumbs-up"></span></button>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-sm">
            <h4 class="text-light">Burger List</h4>
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless devoured}}
                        <li class="list-group-item">
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="eatburger devourButton btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <ul class="list-group">
                <h4 class="text-light">Devoured List</h4>
                {{#each burgers}}
                    {{#if devoured}}
                        <li class="list-group-item">
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>